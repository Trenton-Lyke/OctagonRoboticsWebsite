<h2 class="forumMenuHeader">Forum Menu</h2>
	
	<table id="example" class="table table-striped table-bordered" style="width: 54vw">
        <thead>
            <tr>
                <th>Topics</th>
				<th>Views</th>
				<th>Posts</th>
				<th>Creation</th>
				<th>Last Post</th>
            </tr>
        </thead>
        <tbody>
            
					<%topics.forEach(function(topic){%>
					<tr style="background-color:white; " class="mb1">
				<td style="border-right-style: none;" class="ellipsis">
  
					
						<div class="text-left">
						<a href="/ForumTopic?id=<%=topic.id%>">
						<h2 class="card-title topicTitle " style="width: 34vw; text-overflow: ellipsis;  white-space: nowrap; overflow: hidden;"><%=topic.name%> </h2>
						</a> 
						<h6>Started by <%=topic.username%></h6>
						<h5 class="card-text" style="width: 34vw; text-overflow: ellipsis;  white-space: nowrap; overflow: hidden;"><%=topic.description%></h5>
						
					  </td>
					  <td style="border-right-style: none; "><h3 class="card-title " style="width: 5vw;" ><i class="fa fa-eye" aria-hidden="true" title="Topics"></i><%=topic.view_count%></h3></td>
					  <td style="border-right-style: none;"><h3><i class="fa fa-comments-o" aria-hidden="true" title="Posts"></i><%=topic.post_count%></h3></td>
					  <td style="border-right-style: none; " style="width: 5vw;"><h3><%=topic.creation_date%></h3></td>
					  <td><h3 style="width: 5vw;"><%=topic.last_post_date%></h3></td>
            </tr>
					 <%})	%>
				
            
		</tbody>
